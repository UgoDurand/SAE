{% extends 'base2.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'autofocus': true}}) }}
    {{ form_row(registrationForm.Nom, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.Prenom, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.Age, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.Sexe, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(registrationForm.agreeTerms) }}

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div>
        <button class="btn btn-lg btn-primary" style="margin-left: 45%; margin-top: 2%" type="submit">
            Register
        </button>
    </div>
    {{ form_end(registrationForm) }}

    <form action="{{ path('app_login') }}" method="post">
        <button class="btn btn-lg btn-primary" style="margin-left: 45%; margin-top: 2%" type="submit">Connexion</button>
    </form>
{% endblock %}
